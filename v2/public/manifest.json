{
  "manifest_version": 3,
  "name": "InstaBits",
  "version": "2.0.0",
  "description": "Modern Instagram enhancement extension with video controls and automation features",
  "author": "Rajan Panchal",

  "permissions": [
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "https://*.instagram.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "InstaBits Settings"
  },

  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["services.js", "core.js", "content.js"],
      "css": [],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
