{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "InstaReel everywhere",
  "version": "1.0.2",
  "manifest_version": 3,
  "description": "Boost Instagram Reels auto scroll, ad-free playback. Floating window, skip reels/ads, control anywhere. Binge-watch effortlessly!",
  "action": {
    "default_icon": "/images/48.png"
  },
  "icons": {
    "48": "images/48.png"
  },
  "permissions": [
    "scripting"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; script-src-elem 'self'; object-src 'self'"
  },
  "host_permissions": [
    "https://www.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css":[
        "style.css"
      ],
      "run_at": "document_start"
    }
  ]
}